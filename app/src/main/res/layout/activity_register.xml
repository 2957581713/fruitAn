<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login"
    android:gravity="center">



    <EditText
        android:id="@+id/et_register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:hint="请输入手机号"
        android:inputType="text"
        style="@style/RoundedEditTextStyle" />

    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:hint="请输入密码（密码长度为6~20位）"
        android:inputType="textPassword"
        style="@style/RoundedEditTextStyle" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:hint="请确认密码"
        android:inputType="textPassword"
        style="@style/RoundedEditTextStyle" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp">

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:hint="请输入验证码"
            style="@style/RoundedEditTextStyleRegister" />

        <ImageView
            android:id="@+id/iv_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:clickable="true"
            android:onClick="refreshVerifyCode"
             /> <!-- 替换为加载中的占位图 -->
    </LinearLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFD700"
        android:text="注册"
        android:textColor="#000000"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        style="@style/RoundedButtonStyle" />
    <Button
        android:id="@+id/btn_go_to_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3CB371"
        android:text="前往登录"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        style="@style/RoundedButtonStyle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright © 2025 All rights reserved"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />


</LinearLayout>